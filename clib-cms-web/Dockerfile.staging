# Build stage
FROM node:14.6.0-alpine3.11 as build

RUN mkdir /clib-cms-web
WORKDIR /clib-cms-web

ENV PATH /clib-cms-web/node_modules/.bin:$PATH
COPY package.json ./
COPY yarn.lock ./
RUN yarn install --frozen-lockfile --ignore-engines --production
COPY . ./

RUN yarn run build

# Web server stage
FROM nginx:stable-alpine
COPY --from=build /clib-cms-web/build /usr/share/nginx/html
COPY nginx/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

